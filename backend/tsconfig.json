{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "./",
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "src/**/*.ts",
        "app.js",
        "controllers/**/*.js",
        "models/**/*.js",
        "routes/**/*.js",
        "kyc/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}